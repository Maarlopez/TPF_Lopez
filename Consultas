using System;
using System.Collections.Generic;

namespace TPF_Lopez
{
    class Consultas
    {

        private List<int> MazoUsuario = new List<int>();
        private List<int> MazoIA = new List<int>();
        ArbolGeneral<int> arbolAux;

        public void Menu()
        {
            int op;
            do
            {
                Console.WriteLine("1) Posibles resultados desde aquí");
                Console.WriteLine("2) Posibles resultados con estas cartas");
                Console.WriteLine("3) Altura del árbol");
                Console.WriteLine("4) Salir");


                op = int.Parse(Console.ReadLine()); /* Parseo el dato ingresado por el usuario para pasarlo 
				de string a entero */

                switch (op)
                {
                    /* Inicializo el menu con un switch */

                    case 1:
                        ConsultaA();
                        break;
                    case 2:
                        ConsultaB();
                        break;
                    case 3:
                        ConsultaC();
                        break;
                    case 4:
                        break;
                    default:
                        Console.WriteLine("Opcion incorrecta"); /* Agrego una opción más en caso de que se ingrese
						un numero fuera de rango */
                        break;
                }
            } while (op != 4);
        }

        private void ConsultaA()
        {

        }

        private void ConsultaB()
        {

        }

        private void ConsultaC()
        {

        }
    }
}
